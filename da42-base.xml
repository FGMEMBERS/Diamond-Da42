<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="Systems/views.xml">

    <description>Diamond DA 42 (YASim)</description>
    <author>Emmanuel BARANGER (3D/FDM) - OO ZVY (FDM) - JeeP Cheney (Cockpit-Systems)</author>
    <aircraft-version>0.9 - 29/08/2014</aircraft-version>
    <status>Beta</status>

    <fuel-fraction>1.0</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Diamond-Da42/da42-splash.png</splash-texture>
    </startup>

    <systems include="Systems/electrical.xml"></systems>

    <instrumentation>
      <path>Aircraft/Diamond-Da42/Systems/instrumentation.xml</path>
    </instrumentation>
	
    <sound>
      <path archive="y">Aircraft/Diamond-Da42/Sounds/da42-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/Diamond-Da42/Models/da42.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <flaps>
      <setting> 0.000 </setting>
      <setting> 0.375 </setting>
      <setting> 1.000 </setting> <!-- 20 deg -->
    </flaps>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                          <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                          <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                          <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                          <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                          <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                          <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                          <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                          <!-- 7 color -->
        <int n="8" alias="/systems/electrical/outputs/nav-lights">  0 </int>      <!-- 8 nav-lights -->
        <int n="9" alias="/sim/model/lights/beacon/state">  false </int>          <!-- 9 strobe-lights -->
        <float n="0" alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1" alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                     <!-- altitude for MP shadow -->
        <float n="3" alias="/position/altitude-ft"> 0 </float>                    <!-- altitude for Smoke/Trail -->
        <float n="4" alias="/sim/model/door-positions/leftbagage/position-norm"/>
        <float n="5" alias="/sim/model/door-positions/rightbagage/position-norm"/>
        <float n="6" alias="/engines/engine[0]/rpm"/>
        <float n="7" alias="/engines/engine[0]/cranking"/>
        <float n="8" alias="/engines/engine[1]/rpm"/>
        <float n="9" alias="/engines/engine[1]/cranking"/>
        <float n="10" alias="/gear/gear[0]/wow/"/>
        <float n="11" alias="/gear/gear[1]/wow/"/>
        <float n="12" alias="/gear/gear[2]/wow/"/>
        <float n="13" alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="14" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="15" alias="/gear/gear[2]/rollspeed-ms"/>
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <help include="Systems/help.xml"/>

    <menubar include="Dialogs/da42-menu.xml"/>

    <weight n="0">
      <name type="string">Pilot</name>
      <min-lb type="double">120.0</min-lb>
      <max-lb type="double">300.0</max-lb>
      <weight-lb type="double">200</weight-lb>
    </weight>

    <weight n="1">
      <name type="string">Co Pilot</name>
      <min-lb type="double">0.0</min-lb>
      <max-lb type="double">300.0</max-lb>
      <weight-lb type="double">0</weight-lb>
    </weight>
    
    <weight n="2">
      <name type="string">Left Passenger</name>
      <min-lb type="double">0.0</min-lb>
      <max-lb type="double">300.0</max-lb>
      <weight-lb type="double">0</weight-lb>
    </weight>
    
    <weight n="3">
      <name type="string">Right Passenger</name>
      <min-lb type="double">0.0</min-lb>
      <max-lb type="double">300.0</max-lb>
      <weight-lb type="double">0</weight-lb>
    </weight>
    
    <weight n="4">
      <name type="string">Front Baggages</name>
      <min-lb type="double">0.0</min-lb>
      <max-lb type="double">66.0</max-lb>
      <weight-lb type="double">0</weight-lb>
    </weight>
    
    <weight n="5">
      <name type="string">Rear Baggages</name>
      <min-lb type="double">0.0</min-lb>
      <max-lb type="double">100.0</max-lb>
      <weight-lb type="double">0</weight-lb>
    </weight>

    <icing>
      <windshield type="double">1.0</windshield>
    </icing>
    
  </sim>
 
  <controls>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
    <fuel>
      <tank n="0">
        <position type="double">2</position>
        <lock type="double">1</lock>
      </tank>
      <tank n="1">
        <position type="double">2</position>
        <lock type="double">1</lock>
      </tank>
    </fuel>
    <switches>
      <defrost-lever>0</defrost-lever>
      <cabinheat-lever>0</cabinheat-lever>
      <emerhoriz-lever>0</emerhoriz-lever>
      <emerhoriz-lock>0</emerhoriz-lock>
      <geardown>1</geardown>
      <deice>
        <speed>-1</speed>
        <icelight>0</icelight>
      </deice>
      <flaplever-switch>0</flaplever-switch>
      <ecu n="0">
        <switch type="bool">1</switch>
      </ecu>
      <ecu n="1">
        <switch type="bool">1</switch>
      </ecu>
      <doors>
        <door n="0">
          <locked type="bool">1</locked>
        </door>
        <door n="1">
          <locked type="bool">0</locked>
        </door>
      </doors>
    </switches>
    <lighting>
      <elt type="bool">0</elt>
      <antiicelight type="bool">0</antiicelight>
      <nav-lights type="bool">0</nav-lights>
      <strobe type="bool">0</strobe>
      <taxi-light type="bool">0</taxi-light>
      <flood-lights type="bool">0</flood-lights>
      <landing-lights type="bool">0</landing-lights>
      <instr-lights type="bool">0</instr-lights>
      <gearwrn type="bool">0</gearwrn>
    </lighting>
    <deice>
      <mode type="int">-1</mode>
    </deice>
    <electric>
      <circuitbreaker>
        <com1>0</com1>
        <gpsnav1>0</gpsnav1>
        <xpcom>0</xpcom>
        <enginstr>0</enginstr>
        <pitot>0</pitot>
        <deice>1</deice>
        <taxilight>1</taxilight>
        <oxy>1</oxy>
        <pfd>0</pfd>
        <adc>0</adc>
        <ahrs>0</ahrs>
        <gearwrn>1</gearwrn>
        <gearctrl>1</gearctrl>
        <mfd>0</mfd>
        <ah>1</ah>
        <stallwrn>1</stallwrn>
        <flap>1</flap>
        <landinglight>1</landinglight>
        <instlight>1</instlight>
        <fans>0</fans>
        <avionicbus>1</avionicbus>
        <avionicctrl>0</avionicctrl>
        <com2>0</com2>
        <gpsnav2>0</gpsnav2>
        <audio>0</audio>
        <autopilot>0</autopilot>
        <datalink>0</datalink>
        <wx500>0</wx500>
        <adf>0</adf>
        <dme>0</dme>
        <wxrdr>0</wxrdr>
        <leftecubus>1</leftecubus>
        <leftecub>1</leftecub>
        <leftecua>1</leftecua>
        <leftalt>1</leftalt>
        <leftbat>1</leftbat>
        <rightbat>1</rightbat>
        <rightalt>1</rightalt>
        <rightecubus>1</rightecubus>
        <rightecub>1</rightecub>
        <rightecua>1</rightecua>
      </circuitbreaker>
      <alimentation>
        <gear type="bool">0</gear>
        <flap type="bool">0</flap>
        <stallwrn type="bool">0</stallwrn>
        <deice type="bool">0</deice>
        <engines>
          <engine n="0">
          <starter type="bool">0</starter>
          <ecus>
            <ecu n="0">
              <serviceable type="bool">0</serviceable>
              <selected type="bool">0</selected>
            </ecu>
            <ecu n="1">
              <serviceable type="bool">0</serviceable>
              <selected type="bool">0</selected>
            </ecu>
          </ecus>
          </engine>
            <engine n="1">
            <starter type="bool">0</starter>
            <ecus>
              <ecu n="0">
                <serviceable type="bool">0</serviceable>
                <selected type="bool">0</selected>
              </ecu>
              <ecu n="1">
                <serviceable type="bool">0</serviceable>
                <selected type="bool">0</selected>
              </ecu>
            </ecus>
          </engine>
        </engines>
      </alimentation>
    </electric>
  </controls>

  <consumables>
    <fuel>
      <tank n="0">
        <name>Left wing</name>
        <selected type="bool">true</selected>
      </tank>
      <tank n="1">
        <name>Right wing</name>
        <selected type="bool">true</selected>
      </tank>
    </fuel>
    <!--1 unite par seconde en mode normal = 2h30, 2.5 en mode high = 1h00, et en max 5 done 30mn-->
    <deice type="double">9000.0</deice>
  </consumables>
  
  <input>
    <keyboard include="Systems/da42-keyboard.xml"/>
  </input>

  <!--placement instruments -->
  <!-- -->
  <mymodel>
    <x> 0.007 </x>
    <y> 0.318 </y>
    <z> 0.184 </z>
  </mymodel>
  <!-- -->
  <!--placement instruments -->
 
  <nasal>
    <doors>
      <file>Aircraft/Diamond-Da42/Nasal/doors.nas</file>
    </doors>
    <da42>
      <file>Aircraft/Diamond-Da42/Nasal/light.nas</file>
      <file>Aircraft/Diamond-Da42/Nasal/liveries.nas</file>
      <file>Aircraft/Diamond-Da42/Nasal/immat.nas</file>
      <file>Aircraft/Diamond-Da42/Nasal/tools.nas</file>
      <file>Aircraft/Diamond-Da42/Nasal/electrical.nas</file>
    </da42>
    <!--
         Le zkv100 de Zakharov disponible pour mises à jour ici : http://gitorious.org/zakharov/zkv1000 
