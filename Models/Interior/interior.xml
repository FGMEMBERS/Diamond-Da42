<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>inttourporte</object-name>
    <object-name>intintverriere</object-name>
    <object-name>intporte</object-name>
    <object-name>sieges</object-name>
    <object-name>intbagage.leftdoor</object-name>
    <object-name>intbagage.rightdoor</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreporte</object-name>
  </animation>
  
  <animation>
    <type>select</type>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
	<condition>
		<property>/controls/shaders/intvitres</property>
	</condition>
  </animation>
  <animation>
    <type>select</type>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitreporte</object-name>
	<condition>
		<property>/controls/shaders/intvitreporte</property>
	</condition>
  </animation>
  <animation>
    <type>select</type>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intverriere</object-name>
	<condition>
		<property>/controls/shaders/intverriere</property>
	</condition>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreporte</object-name>
  </animation>
  
  <!-- Yoke -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <name>LeftYoke</name>
    <offsets>
      <x-m> -1.702 </x-m>
      <y-m> -0.300 </y-m>
      <z-m> -0.228 </z-m>
    </offsets>
  </model>
  
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <name>RightYoke</name>
    <offsets>
      <x-m> -1.702 </x-m>
      <y-m>  0.300 </y-m>
      <z-m> -0.228 </z-m>
    </offsets>
  </model>
  
  <!-- Rudder -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/Instruments/rudder/leftrudder.xml</path>
    <name>LeftRudder</name>
    <offsets>
      <x-m> -2.139 </x-m>
      <y-m> -0.276 </y-m>
      <z-m> -0.126 </z-m>
    </offsets>
  </model>
  
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/Instruments/rudder/rightrudder.xml</path>
    <name>RighttRudder</name>
    <offsets>
      <x-m> -2.139 </x-m>
      <y-m> 0.276 </y-m>
      <z-m> -0.126 </z-m>
    </offsets>
  </model>
  
  
  <!-- Les bagages -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/bagages/all-suitcases.xml</path>
  </model>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Pilot/pilot.xml</path>
    <name>pilot</name>
    <offsets>
      <x-m> -1.650 </x-m>
      <y-m> -0.300 </y-m>
      <z-m> -0.040 </z-m>
    </offsets>
  </model>
  
  <!-- CoPilote -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Passenger/copilot.xml</path>
    <name>copilot</name>
    <offsets>
      <x-m> -1.650 </x-m>
      <y-m>  0.300 </y-m>
      <z-m> -0.040 </z-m>
    </offsets>
  </model>

  <animation>
		<type>select</type>
		<object-name>copilot</object-name>
		<condition>
			<greater-than>
				<property>/sim/weight[1]/weight-lb</property>
				<value>0.0</value>
			</greater-than>
		</condition>
	</animation>
  
  <model>
    <path>Aircraft/Diamond-Da42/Models/Passenger/passenger.xml</path>
    <name>passagerG</name>
    <offsets>
      <x-m> -0.743 </x-m>
      <y-m> -0.300 </y-m>
      <z-m> -0.125 </z-m>
    </offsets>
  </model>

	<animation>
		<type>select</type>
		<object-name>passagerG</object-name>
		<condition>
			<greater-than>
				<property>/sim/weight[2]/weight-lb</property>
				<value>0.0</value>
			</greater-than>
		</condition>
	</animation>
	
  <model>
    <path>Aircraft/Diamond-Da42/Models/Passenger/passenger.xml</path>
    <name>passagerD</name>
    <offsets>
      <x-m> -0.743 </x-m>
      <y-m>  0.300 </y-m>
      <z-m> -0.125 </z-m>
    </offsets>
  </model>

  <animation>
		<type>select</type>
		<object-name>passagerD</object-name>
		<condition>
			<greater-than>
				<property>/sim/weight[3]/weight-lb</property>
				<value>0.0</value>
			</greater-than>
		</condition>
	</animation>
	
  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.981 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.097 </z-m>
    </offsets>
  </model>

  <!-- Int Canopy -->
  <animation>
    <name>IntCanopeTotale</name>
    <object-name>intverriere</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>intintverriere</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopeTotale</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 45 </factor>
    <center>
      <x-m> -2.337 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.324 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntPorteTotale</name>
    <object-name>intporte</object-name>
    <object-name>inttourporte</object-name>
    <object-name>intvitreporte</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteTotale</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> -95 </factor>
    <axis>
      <x1-m> -0.796 </x1-m>
      <y1-m> -0.112 </y1-m>
      <z1-m>  0.727 </z1-m>
      <x2-m> -0.481 </x2-m>
      <y2-m> -0.112 </y2-m>
      <z2-m>  0.698 </z2-m>
    </axis>
  </animation>

  <!-- Noze doors -->
	<animation>
		<type>rotate</type>
    <object-name>intbagage.leftdoor</object-name>
		<property>instrumentation/doors/leftbagage/position-norm</property>
		<factor> -100 </factor>
		<axis>
			<x1-m> -3.705 </x1-m>
			<y1-m> -0.0610 </y1-m>
			<z1-m>  0.0601 </z1-m>
			<x2-m> -2.8638 </x2-m>
			<y2-m> -0.0917 </y2-m>
			<z2-m>  0.2437 </z2-m>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
    <object-name>intbagage.rightdoor</object-name>
		<property>instrumentation/doors/rightbagage/position-norm</property>
		<factor> 100 </factor>
		<axis>
			<x1-m> -3.7050 </x1-m>
			<y1-m>  0.0610 </y1-m>
			<z1-m>  0.0601 </z1-m>
			<x2-m> -2.8638 </x2-m>
			<y2-m>  0.0917 </y2-m>
			<z2-m>  0.2437 </z2-m>
		</axis>
	</animation>

	</PropertyList>

