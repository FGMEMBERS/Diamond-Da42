<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>interior.ac</path>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>inttourporte</object-name>
    <object-name>intintverriere</object-name>
    <object-name>intporte</object-name>
    <object-name>sieges</object-name>
    <object-name>intbagage.leftdoor</object-name>
    <object-name>intbagage.rightdoor</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreporte</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Diamond-Da42/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreporte</object-name>
  </effect>
  
  <!-- Yoke -->
  <model>
    <name>LeftYoke</name>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <offsets>
      <x-m> -1.702 </x-m>
      <y-m> -0.300 </y-m>
      <z-m> -0.228 </z-m>
    </offsets>
  </model>
  
  <model>
    <name>RightYoke</name>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/Instruments/Yoke/yoke.xml</path>
    <offsets>
      <x-m> -1.702 </x-m>
      <y-m>  0.300 </y-m>
      <z-m> -0.228 </z-m>
    </offsets>
  </model>
  
  <!-- Les bagages -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/bagages/all-suitcases.xml</path>
  </model>
  
  <!-- Pilote -->
  <model>
    <name>pilot</name>
    <path>Aircraft/Diamond-Da42/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.650 </x-m>
      <y-m> -0.300 </y-m>
      <z-m> -0.040 </z-m>
    </offsets>
  </model>
  
  <!-- CoPilote -->
  <model>
    <name>copilot</name>
    <path>Aircraft/Diamond-Da42/Models/Passenger/copilot.xml</path>
    <offsets>
      <x-m> -1.650 </x-m>
      <y-m>  0.300 </y-m>
      <z-m> -0.040 </z-m>
    </offsets>
  </model>
  
  <animation>
    <type>select</type>
    <object-name>copilot</object-name>
    <condition>
      <greater-than>
        <property>/sim/weight[1]/weight-lb</property>
        <value>0.0</value>
      </greater-than>
    </condition>
  </animation>
  
  <model>
    <name>passagerG</name>
    <path>Aircraft/Diamond-Da42/Models/Passenger/passenger.xml</path>
    <offsets>
      <x-m> -0.743 </x-m>
      <y-m> -0.300 </y-m>
      <z-m> -0.125 </z-m>
    </offsets>
  </model>
  
  <animation>
    <type>select</type>
    <object-name>passagerG</object-name>
    <condition>
      <greater-than>
        <property>/sim/weight[2]/weight-lb</property>
        <value>0.0</value>
      </greater-than>
    </condition>
  </animation>
  
  <model>
    <name>passagerD</name>
    <path>Aircraft/Diamond-Da42/Models/Passenger/passenger.xml</path>
    <offsets>
      <x-m> -0.743 </x-m>
      <y-m>  0.300 </y-m>
      <z-m> -0.125 </z-m>
    </offsets>
  </model>
  
  <animation>
    <type>select</type>
    <object-name>passagerD</object-name>
    <condition>
      <greater-than>
        <property>/sim/weight[3]/weight-lb</property>
        <value>0.0</value>
      </greater-than>
    </condition>
  </animation>
  
  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Diamond-Da42/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.981 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.097 </z-m>
    </offsets>
  </model>
  
  <!-- Int Canopy -->
  <animation>
    <name>IntCanopeTotale</name>
    <object-name>intverriere</object-name>
    <object-name>inttourverriere</object-name>
    <object-name>intintverriere</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntCanopeTotale</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 45 </factor>
    <center>
      <x-m> -2.337 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.324 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <name>IntPorteTotale</name>
    <object-name>intporte</object-name>
    <object-name>inttourporte</object-name>
    <object-name>intvitreporte</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntPorteTotale</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> -95 </factor>
    <axis>
      <x1-m> -0.796 </x1-m>
      <y1-m> -0.112 </y1-m>
      <z1-m>  0.727 </z1-m>
      <x2-m> -0.481 </x2-m>
      <y2-m> -0.112 </y2-m>
      <z2-m>  0.698 </z2-m>
    </axis>
  </animation>
  
  <!-- Noze doors -->
  <animation>
    <type>rotate</type>
    <object-name>intbagage.leftdoor</object-name>
    <property>sim/model/door-positions/leftbagage/position-norm</property>
    <factor> -100 </factor>
    <axis>
      <x1-m> -3.705 </x1-m>
      <y1-m> -0.0610 </y1-m>
      <z1-m>  0.0601 </z1-m>
      <x2-m> -2.8638 </x2-m>
      <y2-m> -0.0917 </y2-m>
      <z2-m>  0.2437 </z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>intbagage.rightdoor</object-name>
    <property>sim/model/door-positions/rightbagage/position-norm</property>
    <factor> 100 </factor>
    <axis>
      <x1-m> -3.7050 </x1-m>
      <y1-m>  0.0610 </y1-m>
      <z1-m>  0.0601 </z1-m>
      <x2-m> -2.8638 </x2-m>
      <y2-m>  0.0917 </y2-m>
      <z2-m>  0.2437 </z2-m>
    </axis>
  </animation>
  
</PropertyList>
