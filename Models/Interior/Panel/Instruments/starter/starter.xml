<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<path>starter.ac</path>

	<animation>
		<name>Starter</name>
		<object-name>base</object-name>
		<object-name>starter</object-name>
		<object-name>startersupport</object-name>
		<object-name>key</object-name>
		<object-name>ring</object-name>
		<object-name>ring.tube</object-name>
		<!--<object-name>ring.pastille</object-name>-->
	</animation>
	  
	<animation>
		<type>rotate</type>
		<object-name>key</object-name>
		<object-name>starter</object-name>
		<property>/controls/switches/starterkey</property>
		<factor>-30</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>key</object-name>
		<object-name>ring</object-name>
		<object-name>ring.tube</object-name>
		<object-name>ring.pastille</object-name>
		<condition>
			<property>/controls/switches/starterkey-insert</property>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>starter</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>/controls/switches/starterkey-insert</property>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>turnleft</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<property>/controls/switches/starterkey-insert</property>
				</condition>
				<command>property-assign</command>
				<property>/controls/switches/starterkey</property>
				<value type="double">-1.0</value>
			</binding>
			<binding>
				<condition>
					<property>/controls/switches/starterkey-insert</property>
				</condition>
				<command>nasal</command>
				<script>controls.startEngine(1,0)</script>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>/controls/switches/starterkey</property>
					<value type="double">0.0</value>
				</binding>
				<binding>
					<command>nasal</command>
					<script>controls.startEngine(0,0)</script>
				</binding>
			</mod-up>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>turnright</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<property>/controls/switches/starterkey-insert</property>
				</condition>
				<command>property-assign</command>
				<property>/controls/switches/starterkey</property>
				<value type="double">1.0</value>
			</binding>
			<binding>
				<condition>
					<property>/controls/switches/starterkey-insert</property>
				</condition>
				<command>nasal</command>
				<script>controls.startEngine(1,1)</script>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>/controls/switches/starterkey</property>
					<value type="double">0.0</value>
				</binding>
				<binding>
					<command>nasal</command>
					<script>controls.startEngine(0,1)</script>
				</binding>
			</mod-up>
		</action>
	</animation>

	<!-- effects inspired from i16 ... -->
	<animation>
		<type>rotate</type>
		<object-name>ring</object-name>
		<object-name>ring.tube</object-name>
		<object-name>ring.pastille</object-name>
		<property>/orientation/roll-deg</property>
		<factor>1</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>ring</object-name>
		<object-name>ring.tube</object-name>
		<object-name>ring.pastille</object-name>
		<property>/orientation/pitch-deg</property>
		<interpolation>
			<entry><ind> -180 </ind><dep> 12 </dep></entry>
			<entry><ind> -12 </ind><dep> 12 </dep></entry>
			<entry><ind> 0 </ind><dep> 0 </dep></entry>
			<entry><ind> 12 </ind><dep> -12 </dep></entry>
			<entry><ind> 180 </ind><dep> -180 </dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>Starter</object-name>
		<emission>
			<red>   0.2 </red>
			<green> 0.2 </green>
			<blue>  0.2 </blue>
			<factor-prop>/controls/switches/flood-lights-norm</factor-prop>
		</emission>
		<condition>
			<greater-than>
				<property>/controls/lighting/flood-lights</property>
				<value>0</value>
			</greater-than>	
		</condition>
	</animation>
	
</PropertyList>


