<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<path>pushbutton.ac</path>

	<animation>
		<type>translate</type>
		<object-name>button</object-name>
		<property>/controls/switches/test-transit-button</property>
		<factor>-0.003</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>button</object-name>
		<action>
			<button>0</button>
			<binding>
				<command>property-toggle</command>
				<property>/controls/switches/test-transit-button</property>
			</binding>
			<mod-up>
				<binding>
					<command>property-toggle</command>
					<property>/controls/switches/test-transit-button</property>
				</binding>
			</mod-up>
		</action>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>button</object-name>
		<object-name>support</object-name>
		<emission>
			<red>   0.2 </red>
			<green> 0.2 </green>
			<blue>  0.2 </blue>
			<factor-prop>/controls/switches/flood-lights-norm</factor-prop>
		</emission>
		<condition>
			<greater-than>
				<property>/controls/lighting/flood-lights</property>
				<value>0</value>
			</greater-than>	
		</condition>
	</animation>
</PropertyList>


