<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<path>greenlight.ac</path>

	<animation>
		<type>material</type>
		<object-name>lighton</object-name>
		<emission>
			<red>0</red>
			<green>1</green>
			<blue>0</blue>
		</emission>
		<condition>
			<and>
				<or>
					<equals>
							<property>/gear/gear[0]/position-norm</property>
							<value type="double">1.0</value>
					</equals>
					<equals>
						<property>/controls/switches/test-transit-button</property>
						<value>1</value>
					</equals>
				</or>
				<equals>
					<property>/controls/lighting/gearwrn</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>lighton</object-name>
		<condition>
			<and>
				<or>
					<equals>
							<property>/gear/gear[0]/position-norm</property>
							<value type="double">1.0</value>
					</equals>
					<equals>
						<property>/controls/switches/test-transit-button</property>
						<value>1</value>
					</equals>
				</or>
				<equals>
					<property>/controls/lighting/gearwrn</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
	</animation>
	
</PropertyList>


