<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>redlight.ac</path>
  
  <animation>
    <object-name>support</object-name>
    <object-name>light</object-name>
  </animation>
<effect>
   <inherits-from>Aircraft/Diamond-Da42/Models/Effects/Interior/interior</inherits-from>
    <object-name>support</object-name>
    <object-name>light</object-name>
</effect>

  <animation>
    <type>material</type>
    <object-name>light</object-name>
    <emission>
      <red>   2 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
    <condition>
      <and>
        <greater-than>
          <property>/gear/gear[0]/position-norm</property>
          <value type="double">0</value>
        </greater-than> 
        <less-than>
          <property>/gear/gear[0]/position-norm</property>
          <value type="double">1</value>
        </less-than>  
        <greater-than>
          <property>/gear/gear[1]/position-norm</property>
          <value type="double">0</value>
        </greater-than> 
        <less-than>
          <property>/gear/gear[1]/position-norm</property>
          <value type="double">1</value>
        </less-than>  
        <greater-than>
          <property>/gear/gear[2]/position-norm</property>
          <value type="double">0</value>
        </greater-than> 
        <less-than>
          <property>/gear/gear[2]/position-norm</property>
          <value type="double">1</value>
        </less-than>
        <property>/controls/electric/battery-switch</property>
      </and>
    </condition>
  </animation>
  
</PropertyList>
