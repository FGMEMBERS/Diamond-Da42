<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>greenlight.ac</path>
  
  <animation>
    <object-name>support</object-name>
    <object-name>light</object-name>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>light</object-name>
    <emission>
      <red>   0 </red>
      <green> 2 </green>
      <blue>  0 </blue>
    </emission>
    <condition>
      <and>
        <greater-than>
          <property>/surface-positions/flaps-pos-norm</property>
          <value type="double">-0.25</value>
        </greater-than>
        <equals>
          <property>/controls/electric/alimentation/flap</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
  </animation>
  
</PropertyList>
