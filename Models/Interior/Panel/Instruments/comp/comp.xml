<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>comp.ac</path>
  
  <animation>
    <object-name>support</object-name>
    <object-name>Knob</object-name>
    <object-name>Ring</object-name>
    
    <object-name>vitre</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Diamond-Da42/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>Ring</object-name>
    <emission>
      <factor-prop>/controls/switches/instrument-lights-norm-bis</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
    <condition>
      <greater-than>
        <property>/controls/lighting/flood-lights</property>
        <value>0</value>
      </greater-than> 
    </condition>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Ring</object-name>
    <property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
</PropertyList>
