<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<path>rembrandt_light.ac</path>
	<nopreview/>
	
	<animation>
    <type>light</type>
    <light-type>point</light-type>
    <object-name>light</object-name>
    <position>
      <x> 0 </x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <direction>
      <x>  0.0 </x>
      <y> -1.0 </y>
      <z> -0.4 </z>
    </direction>
    <ambient>
      <r>  0.3 </r>
      <g>  0.3 </g>
      <b>  0.3 </b>
      <a>  1.0 </a>
    </ambient>
    <diffuse>
      <r>  0.8 </r>
      <g>  0.8 </g>
      <b>  0.8 </b>
      <a>  1.0 </a>
    </diffuse>
    <specular>
      <r>  0.5 </r>
      <g>  0.5 </g>
      <b>  0.5 </b>
      <a>  1.0 </a>
    </specular>
    <attenuation>
      <c>  0.4 </c>
      <l>  0.1 </l>
      <q>  0.6 </q>
    </attenuation>
    <near-m> 0.0  </near-m>
    <far-m> 30.0  </far-m>
  </animation>

	<animation>
		<type>select</type>
		<object-name>light</object-name>
		<condition>
			<and>
				<property>/sim/model/lights/sbc1/state</property>
				<property>/controls/lighting/strobe</property>
				<equals>
					<property>/controls/flight/wing_destroyed</property>
					<value>0</value>
				</equals>
			</and>
		</condition>
	</animation>


</PropertyList>
